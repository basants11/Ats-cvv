# ATS CV Builder Environment Configuration
# Copy this file to .env and fill in your actual values

# Project Settings
PROJECT_NAME="ATS CV Builder"
VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS Settings (comma-separated URLs)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Trusted Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cv_builder_db

# Alternative Database (MongoDB)
# MONGODB_URL=mongodb://localhost:27017/cv_builder

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-cv-builder-bucket

# Firebase Configuration (alternative to AWS S3)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Supabase Configuration (alternative database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Email Configuration (for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME="ATS CV Builder"

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# External API Keys (if using other services)
# SENDGRID_API_KEY=your-sendgrid-api-key
# STRIPE_PUBLIC_KEY=your-stripe-public-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Development Settings
HOT_RELOAD=true
RELOAD_DIRS=app

# Testing
TEST_DATABASE_URL=postgresql://test_username:test_password@localhost:5432/cv_builder_test

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# REDIS_PASSWORD=your-redis-password